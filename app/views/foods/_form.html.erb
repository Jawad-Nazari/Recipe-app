<!-- app/views/foods/_form.html.erb -->

<%= form_for(food, html: { class: 'form mx-auto', style: 'width: 60%;' }) do |f| %>
  <% if food.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food item from being saved:</h2>

      <ul>
        <% food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
